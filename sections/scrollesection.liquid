   .db-col-bullets.db-desktoponly .scroll-container li.scroll-slide h3 {
    text-align: center;
}
   @media screen and (min-width:768px){
.db-col-bullets.db-desktoponly li.scroll-slide:before {
    content: '';
    display: block;
    width: 18px;
    height: 18px;
    border-radius: 90px;
    background: #214068;
    position: absolute;
    z-index: 2;
      margin-left: -40px;
    margin-top: 10px;
}
.db-col-bullets.db-desktoponly li.scroll-slide:after {
        content: '';
    position: absolute;
    z-index: 1;
    display: block;
    width: 20px;
    height: 15%;
    border-radius: 0;
    border-right: 1px dashed #214068;
    transition: .2s height;
    margin-left: -50px;
    margin-top: -130px;
 }
   }
.db-sec-why-col.db-sec-why-col-bullets ul.scroll-wrapper {
    list-style: none;
    margin: 0;
}

.db-sec-why-col.db-sec-why-col-bullets .db-col-bullets.db-desktoponly {
    padding-bottom: 25px;
}
   .db-glue-sticky img {
    border: 0 none;
    display: block;
    height: auto;
    max-width: 100%;
}
   .db-sec-why-row.page-width {
    background-color: #f3f3f3;
}
        </style>

  <div class="db-sec-why-row page-width">  
    <div class="db-col-title db-desktoponly">
		<h2> {{ section.settings.heading }}</h2>
    </div>
   <div class="db-sec-why-col db-sec-why-col-image">
     <div class="db-glue-sticky" >
