 <style>
    .db-sec-why-row {
    display: flex;
    /* position: absolute; */
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-evenly;
    color: #214068;
    /* background-color: white; */
    font-family: Work Sans, sans-serif;
    padding: 35px 0;
}
   .db-col-title.db-desktoponly {
    POSITION: ABSOLUTE;
 }

.db-sec-why-col.db-sec-why-col-bullets {
    padding-left: 18px;
}
.db-sec-why-col.db-sec-why-col-image {
    width: 188%;
   
}
::marker {
    font-size: xxx-large;
}

li.scroll-slide {
    padding: 0px 49px 0 20px;;
}
h3.db-col-title.db-desktoponly {
    font-weight: 800;
    font-size: calc(26px + 1vw);
}
li.scroll-slide.db-not-inview:after {
    content: " ";
    position: absolute;
    z-index: 1;
    top: 182px;
    left: 521px;
    display: block;
    width: 21px;
    height: 78%;
    border-radius: 0;
    border-right: 1px dashed #214068;
    transition: 0.2s height;
}
.db-glue-sticky {
    position: sticky;
    top:70px;
}
   .db-sec-why-row .db-glue-sticky {
    padding: 2.1rem 10rem;
}
.db-col-bullets.db-desktoponly .scroll-container li.scroll-slide h3 {
    text-align: left !important;
    font-size: 28px;
    margin: 0;
    color: #214068;
}
   
   @media only screen and (max-width: 768px) {
.db-sec-why-row.page-width {
    display: block;
}
  .db-sec-why-col.db-sec-why-col-image {
    width: auto;
}
  .db-col-title.db-desktoponly {
    position: relative;
    text-align:center;
  }
.db-sec-why-col.db-sec-why-col-bullets li.scroll-slide {
    padding: 0;
}
.db-sec-why-col.db-sec-why-col-bullets {
    padding-left: 0;
    display: flex;
    flex-wrap: nowrap;
    overflow-x: scroll;
}
.db-sec-why-col.db-sec-why-col-bullets ul.scroll-wrapper {
    list-style: none;
    margin: 0;
}
.db-col-bullets.db-desktoponly li.scroll-slide h3 {
    font-size: 22px;
}
.db-col-bullets.db-desktoponly li.scroll-slide p {
    font-size: 18px;
} 
.db-sec-why-row .db-glue-sticky {
    padding: 10px;
    border-radius: 10px;
}
.db-col-bullets.db-desktoponly {
   padding: 18px;
   min-width: 75%;
}
.db-col-bullets.db-desktoponly li.scroll-slide:before {
     content: '';
        display: block;
        width: 18px;
        height: 18px;
        border-radius: 90px;
        background: #214068;
        margin-bottom: 10px;
}
.db-col-bullets.db-desktoponly li.scroll-slide h3:before {
    content: " ";
    display: block;
    width: 50%;
    border-top: 2px dotted #214068;
    margin-top: -20px;
    margin-left: 13%;
    padding-top: 25px;
}
     
